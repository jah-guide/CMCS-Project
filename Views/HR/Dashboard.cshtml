<!-- File: Views/HR/Dashboard.cshtml -->
@model ContractMonthlyClaimSystem.Models.HRDashboardViewModel
@{
    ViewData["Title"] = "HR Dashboard - Automated Claim Processing";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>HR Dashboard - Automated Claim Processing</h2>
        <div class="btn-group">
            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#processPaymentsModal">
                <i class="fas fa-money-bill-wave"></i> Process Payments
            </button>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#generateInvoicesModal">
                <i class="fas fa-file-invoice"></i> Generate Invoices
            </button>
            <a href="@Url.Action("LecturerManagement")" class="btn btn-info">
                <i class="fas fa-users"></i> Manage Lecturers
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h6 class="card-title">Pending Payments</h6>
                    <h3>@Model.PendingPaymentClaims.Count</h3>
                    <p class="card-text">R @Model.PendingPaymentClaims.Sum(c => c.TotalAmount).ToString("F2")</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h6 class="card-title">Monthly Approved</h6>
                    <h3>@Model.MonthlySummary.ApprovedClaims</h3>
                    <p class="card-text">R @Model.MonthlySummary.ApprovedAmount.ToString("F2")</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h6 class="card-title">Total Lecturers</h6>
                    <h3>@Model.Lecturers.Count</h3>
                    <p class="card-text">Active in system</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h6 class="card-title">Current Batch</h6>
                    <h3>@Model.CurrentPaymentBatch.ClaimCount</h3>
                    <p class="card-text">R @Model.CurrentPaymentBatch.TotalAmount.ToString("F2")</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Payment Claims Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-clock"></i> Claims Pending Payment Processing
                <span class="badge bg-secondary">@Model.PendingPaymentClaims.Count</span>
            </h5>
        </div>
        <div class="card-body">
            @if (Model.PendingPaymentClaims.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="pendingClaimsTable">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" id="selectAllClaims" />
                                </th>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Hours</th>
                                <th>Amount</th>
                                <th>Submitted</th>
                                <th>Auto Score</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model.PendingPaymentClaims)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="claim-checkbox" value="@claim.ClaimID" />
                                    </td>
                                    <td>@claim.ClaimID</td>
                                    <td>@claim.User?.FullName</td>
                                    <td>@claim.HoursWorked</td>
                                    <td>R @claim.TotalAmount.ToString("F2")</td>
                                    <td>@claim.SubmissionDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        @{
                                            var score = Model.ClaimScores.FirstOrDefault(s => s.ClaimId == claim.ClaimID);
                                            var badgeClass = score?.Priority == "High" ? "bg-success" :
                                            score?.Priority == "Medium" ? "bg-warning" : "bg-secondary";
                                        }
                                        <span class="badge @badgeClass">
                                            @(score?.OverallScore.ToString("F0") ?? "N/A")%
                                        </span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", "Claims", new { id = claim.ClaimID })"
                                           class="btn btn-sm btn-outline-primary" target="_blank">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No claims pending payment processing.
                </div>
            }
        </div>
    </div>

    <!-- Recent Lecturers -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-users"></i> Recent Lecturers
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Lecturers.Any())
                    {
                        <div class="list-group">
                            @foreach (var lecturer in Model.Lecturers.Take(5))
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@lecturer.FullName</strong>
                                        <br>
                                        <small class="text-muted">Rate: R @lecturer.HourlyRate.ToString("F2")/hr</small>
                                    </div>
                                    <span class="badge bg-primary rounded-pill">Active</span>
                                </div>
                            }
                        </div>
                        <div class="mt-2">
                            <a href="@Url.Action("LecturerManagement")" class="btn btn-sm btn-outline-primary">
                                View All Lecturers
                            </a>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No lecturers found.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar"></i> Monthly Summary
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-6">Total Claims:</dt>
                        <dd class="col-sm-6">@Model.MonthlySummary.TotalClaims</dd>

                        <dt class="col-sm-6">Approved Claims:</dt>
                        <dd class="col-sm-6">@Model.MonthlySummary.ApprovedClaims</dd>

                        <dt class="col-sm-6">Paid Claims:</dt>
                        <dd class="col-sm-6">@Model.MonthlySummary.PaidClaims</dd>

                        <dt class="col-sm-6">Total Amount:</dt>
                        <dd class="col-sm-6">R @Model.MonthlySummary.TotalAmount.ToString("F2")</dd>

                        <dt class="col-sm-6">Approved Amount:</dt>
                        <dd class="col-sm-6">R @Model.MonthlySummary.ApprovedAmount.ToString("F2")</dd>

                        <dt class="col-sm-6">Paid Amount:</dt>
                        <dd class="col-sm-6">R @Model.MonthlySummary.PaidAmount.ToString("F2")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Process Payments Modal -->
<div class="modal fade" id="processPaymentsModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Process Payments</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to process payments for the selected claims?</p>
                <div id="selectedClaimsSummary" class="alert alert-info">
                    No claims selected.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="processPaymentsForm" method="post" action="@Url.Action("ProcessPayments")">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="claimIds" id="selectedClaimIds" />
                    <button type="submit" class="btn btn-success" disabled id="processPaymentsBtn">
                        <i class="fas fa-money-bill-wave"></i> Process Payments
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Generate Invoices Modal -->
<div class="modal fade" id="generateInvoicesModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Generate Invoices</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Generate invoices for selected claims:</p>
                <div id="invoiceClaimsSummary" class="alert alert-info">
                    No claims selected.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="generateInvoicesForm" method="post" action="@Url.Action("GenerateInvoices")">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="claimIds" id="invoiceClaimIds" />
                    <button type="submit" class="btn btn-primary" disabled id="generateInvoicesBtn">
                        <i class="fas fa-file-invoice"></i> Generate Invoices
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Select all functionality
            $('#selectAllClaims').change(function() {
                $('.claim-checkbox').prop('checked', this.checked);
                updateSelectedClaims();
            });

            // Individual checkbox change
            $('.claim-checkbox').change(function() {
                updateSelectedClaims();
            });

            function updateSelectedClaims() {
                const selectedClaims = $('.claim-checkbox:checked');
                const claimIds = selectedClaims.map(function() {
                    return $(this).val();
                }).get();

                $('#selectedClaimIds').val(claimIds.join(','));
                $('#invoiceClaimIds').val(claimIds.join(','));

                const totalAmount = calculateTotalAmount(selectedClaims);

                // Update process payments modal
                if (claimIds.length > 0) {
                    $('#selectedClaimsSummary').html(`
                        <strong>${claimIds.length} claims selected</strong><br>
                        Total Amount: <strong>R ${totalAmount.toFixed(2)}</strong>
                    `);
                    $('#processPaymentsBtn').prop('disabled', false);
                } else {
                    $('#selectedClaimsSummary').html('No claims selected.');
                    $('#processPaymentsBtn').prop('disabled', true);
                }

                // Update invoices modal
                if (claimIds.length > 0) {
                    $('#invoiceClaimsSummary').html(`
                        <strong>${claimIds.length} claims selected</strong><br>
                        Total Amount: <strong>R ${totalAmount.toFixed(2)}</strong>
                    `);
                    $('#generateInvoicesBtn').prop('disabled', false);
                } else {
                    $('#invoiceClaimsSummary').html('No claims selected.');
                    $('#generateInvoicesBtn').prop('disabled', true);
                }
            }

            function calculateTotalAmount(selectedClaims) {
                let total = 0;
                selectedClaims.each(function() {
                    const row = $(this).closest('tr');
                    const amountText = row.find('td:eq(4)').text().replace('R ', '');
                    total += parseFloat(amountText) || 0;
                });
                return total;
            }

            // Initialize
            updateSelectedClaims();
        });
    </script>
}