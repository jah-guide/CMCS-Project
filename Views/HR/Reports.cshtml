<!-- File: Views/HR/Reports.cshtml -->
@model ContractMonthlyClaimSystem.Models.ReportParameters
@{
    ViewData["Title"] = "HR Reports & Analytics";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-chart-line"></i> HR Reports & Analytics
        </h2>
        <a href="@Url.Action("Dashboard")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <!-- Report Generation Card -->
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-cog"></i> Generate Custom Reports
                    </h5>
                </div>
                <div class="card-body">
                    <form id="reportForm" method="post" action="@Url.Action("GeneratePaymentReport")">
                        @Html.AntiForgeryToken()

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="StartDate" class="form-label">Start Date</label>
                                <input type="date" class="form-control" id="StartDate" name="startDate"
                                       value="@Model.StartDate.ToString("yyyy-MM-dd")" required>
                            </div>
                            <div class="col-md-6">
                                <label for="EndDate" class="form-label">End Date</label>
                                <input type="date" class="form-control" id="EndDate" name="endDate"
                                       value="@Model.EndDate.ToString("yyyy-MM-dd")" required>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="ReportType" class="form-label">Report Type</label>
                                <select class="form-select" id="ReportType" name="reportType">
                                    <option value="Payment" selected>Payment Report</option>
                                    <option value="Claims">Claims Summary</option>
                                    <option value="Lecturer">Lecturer Performance</option>
                                    <option value="Budget">Budget Utilization</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="Format" class="form-label">Output Format</label>
                                <select class="form-select" id="Format" name="format">
                                    <option value="PDF" selected>PDF Document</option>
                                    <option value="CSV">CSV Spreadsheet</option>
                                    <option value="Excel">Excel File</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="IncludeDetails" name="includeDetails" checked>
                                <label class="form-check-label" for="IncludeDetails">
                                    Include detailed transaction records
                                </label>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="button" class="btn btn-outline-secondary" onclick="previewReport()">
                                <i class="fas fa-eye"></i> Preview
                            </button>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-download"></i> Generate Report
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Report Preview Section -->
            <div class="card mt-4" id="reportPreview" style="display: none;">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-eye"></i> Report Preview
                    </h5>
                </div>
                <div class="card-body">
                    <div id="previewContent">
                        <!-- Preview content will be loaded here -->
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Quick Reports -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bolt"></i> Quick Reports
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-outline-primary text-start" onclick="generateQuickReport('currentMonth')">
                            <i class="fas fa-calendar-alt"></i> Current Month Summary
                        </button>
                        <button type="button" class="btn btn-outline-success text-start" onclick="generateQuickReport('lastMonth')">
                            <i class="fas fa-chart-bar"></i> Last Month Analysis
                        </button>
                        <button type="button" class="btn btn-outline-info text-start" onclick="generateQuickReport('quarterly')">
                            <i class="fas fa-chart-pie"></i> Quarterly Overview
                        </button>
                        <button type="button" class="btn btn-outline-warning text-start" onclick="generateQuickReport('yearToDate')">
                            <i class="fas fa-chart-line"></i> Year-to-Date
                        </button>
                    </div>
                </div>
            </div>

            <!-- Analytics Summary -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-pie"></i> Key Metrics
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted">Monthly Claims Volume</small>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-success" style="width: 75%">75%</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Budget Utilization</small>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-warning" style="width: 60%">60%</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Approval Rate</small>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-info" style="width: 85%">85%</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Average Processing Time</small>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-primary" style="width: 45%">2.3 days</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Automated Reports -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-robot"></i> Automated Reports
                    </h5>
                </div>
                <div class="card-body">
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="weeklyReport" checked>
                        <label class="form-check-label" for="weeklyReport">
                            Weekly Summary (Monday 9 AM)
                        </label>
                    </div>
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="monthlyReport">
                        <label class="form-check-label" for="monthlyReport">
                            Monthly Financial Report
                        </label>
                    </div>
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="budgetAlert">
                        <label class="form-check-label" for="budgetAlert">
                            Budget Threshold Alerts
                        </label>
                    </div>
                    <button type="button" class="btn btn-sm btn-outline-primary w-100" onclick="saveAutomationSettings()">
                        <i class="fas fa-save"></i> Save Settings
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Set default dates
            const today = new Date();
            const firstDay = new Date(today.getFullYear(), today.getMonth(), 1);

            $('#StartDate').val(firstDay.toISOString().split('T')[0]);
            $('#EndDate').val(today.toISOString().split('T')[0]);
        });

        function previewReport() {
            const startDate = $('#StartDate').val();
            const endDate = $('#EndDate').val();
            const reportType = $('#ReportType').val();

            // Show loading state
            $('#previewContent').html(`
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Generating preview...</p>
                </div>
            `);

            $('#reportPreview').show();

            // Simulate API call delay
            setTimeout(() => {
                const previewHtml = generatePreviewContent(startDate, endDate, reportType);
                $('#previewContent').html(previewHtml);
            }, 1500);
        }

        function generatePreviewContent(startDate, endDate, reportType) {
            return `
                <h6>${reportType} Report Preview</h6>
                <p><strong>Period:</strong> ${startDate} to ${endDate}</p>
                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Metric</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Total Claims</td>
                                <td>42</td>
                            </tr>
                            <tr>
                                <td>Total Amount</td>
                                <td>R 125,430.00</td>
                            </tr>
                            <tr>
                                <td>Approved Claims</td>
                                <td>38</td>
                            </tr>
                            <tr>
                                <td>Rejected Claims</td>
                                <td>4</td>
                            </tr>
                            <tr>
                                <td>Average Claim Amount</td>
                                <td>R 2,986.43</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="alert alert-info">
                    <small>
                        <i class="fas fa-info-circle"></i>
                        This is a preview. The actual report will contain detailed transaction data.
                    </small>
                </div>
            `;
        }

        function generateQuickReport(type) {
            let startDate, endDate, title;

            const today = new Date();

            switch(type) {
                case 'currentMonth':
                    startDate = new Date(today.getFullYear(), today.getMonth(), 1);
                    endDate = today;
                    title = 'Current Month Summary';
                    break;
                case 'lastMonth':
                    startDate = new Date(today.getFullYear(), today.getMonth() - 1, 1);
                    endDate = new Date(today.getFullYear(), today.getMonth(), 0);
                    title = 'Last Month Analysis';
                    break;
                case 'quarterly':
                    const quarter = Math.floor(today.getMonth() / 3);
                    startDate = new Date(today.getFullYear(), quarter * 3, 1);
                    endDate = today;
                    title = 'Quarterly Overview';
                    break;
                case 'yearToDate':
                    startDate = new Date(today.getFullYear(), 0, 1);
                    endDate = today;
                    title = 'Year-to-Date Report';
                    break;
            }

            $('#StartDate').val(startDate.toISOString().split('T')[0]);
            $('#EndDate').val(endDate.toISOString().split('T')[0]);
            $('#ReportType').val('Payment');

            alert(`Quick report "${title}" configured! Click "Generate Report" to download.`);
        }

        function saveAutomationSettings() {
            const weekly = $('#weeklyReport').is(':checked');
            const monthly = $('#monthlyReport').is(':checked');
            const budget = $('#budgetAlert').is(':checked');

            // In real application, this would save to backend
            alert('Automation settings saved successfully!');
        }

        // Real-time date validation
        $('#StartDate, #EndDate').change(function() {
            const startDate = new Date($('#StartDate').val());
            const endDate = new Date($('#EndDate').val());

            if (startDate > endDate) {
                alert('Start date cannot be after end date!');
                $('#EndDate').val($('#StartDate').val());
            }
        });
    </script>

    <style>
        .progress {
            margin-bottom: 10px;
        }

        .form-switch {
            padding-left: 2.5em;
        }

        .form-check-input {
            margin-left: -2.5em;
        }
    </style>
}