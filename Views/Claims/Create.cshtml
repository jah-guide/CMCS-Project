@model ContractMonthlyClaimSystem.Models.Claim


@{
    ViewData["Title"] = "Submit New Claim";
}

<h2>Submit New Claim</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data" id="claimForm">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label for="HoursWorked" class="form-label">Hours Worked *</label>
                <input type="number" id="HoursWorked" name="HoursWorked" class="form-control"
                       required min="1" max="200" value="@Model.HoursWorked" />
                <span class="text-danger field-validation-valid" data-valmsg-for="HoursWorked" data-valmsg-replace="true"></span>
            </div>

            <div class="mb-3">
                <label for="Notes" class="form-label">Notes (Optional)</label>
                <textarea id="Notes" name="Notes" class="form-control" rows="3">@Model.Notes</textarea>
            </div>

            <div class="mb-3">
                <label for="supportingDocuments" class="form-label">Supporting Documents</label>
                <input type="file" id="supportingDocuments" name="supportingDocuments" multiple class="form-control" />
                <small class="form-text text-muted">Allowed files: PDF, DOCX, XLSX, JPG, PNG (Max 5MB each)</small>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Submit Claim</button>
                <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Your Profile Information</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.User != null)
                {
                    <p><strong>Hourly Rate:</strong> R @ViewBag.User.HourlyRate.ToString("F2")</p>
                    <p><strong>Total will be calculated as:</strong> Hours Worked × Hourly Rate</p>
                    <p class="text-muted"><small>Example: 10 hours × R @ViewBag.User.HourlyRate.ToString("F2") = R @(ViewBag.User.HourlyRate * 10)</small></p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            console.log("Create page loaded");

            // Simple form validation
            $('#claimForm').on('submit', function(e) {
                const hours = $('#HoursWorked').val();
                if (!hours || hours < 1 || hours > 200) {
                    alert('Please enter valid hours worked (1-200)');
                    e.preventDefault();
                    return false;
                }
                return true;
            });
        });
    </script>
}