
@model IEnumerable<ContractMonthlyClaimSystem.Models.Claim>
@using ContractMonthlyClaimSystem.Services
@inject IClaimAutomationService ClaimAutomationService

@{
    ViewData["Title"] = "Manager Dashboard - Final Approval";
    var claimsWithScores = new List<ClaimWithScore>();

    foreach (var claim in Model)
    {
        var score = await ClaimAutomationService.CalculateClaimScoreAsync(claim);
        claimsWithScores.Add(new ClaimWithScore { Claim = claim, Score = score });
    }
}

<h2>
    <i class="fas fa-user-tie"></i> Manager Dashboard - Final Approval
</h2>

<!-- Executive Summary -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h6 class="card-title">Pending Final Approval</h6>
                <h3>@Model.Count()</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h6 class="card-title">Total Amount</h6>
                <h3>R @Model.Sum(c => c.TotalAmount).ToString("F2")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <h6 class="card-title">High Confidence</h6>
                <h3>@claimsWithScores.Count(c => c.Score.OverallScore >= 80)</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h6 class="card-title">Avg Score</h6>
                <h3>@(claimsWithScores.Any() ? claimsWithScores.Average(c => c.Score.OverallScore).ToString("F0") : "0")%</h3>
            </div>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <!-- Batch Operations -->
    <div class="card mb-4">
        <div class="card-header bg-secondary text-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-layer-group"></i> Batch Operations
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <button class="btn btn-success w-100" data-bs-toggle="modal" data-bs-target="#batchApproveModal">
                        <i class="fas fa-check-double"></i> Batch Approve All High-Confidence
                    </button>
                </div>
                <div class="col-md-6">
                    <button class="btn btn-info w-100" onclick="generateManagerReport()">
                        <i class="fas fa-chart-pie"></i> Generate Approval Report
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-clipboard-check"></i> Claims Approved by Coordinator - Final Approval
                <span class="badge bg-secondary">@Model.Count()</span>
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="managerClaimsTable">
                    <thead>
                        <tr>
                            <th>AI Score</th>
                            <th>Lecturer</th>
                            <th>Hours</th>
                            <th>Amount</th>
                            <th>Submission Date</th>
                            <th>Documents</th>
                            <th>Coordinator Notes</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in claimsWithScores.OrderByDescending(c => c.Score.OverallScore))
                        {
                            var claim = item.Claim;
                            var score = item.Score;
                            var scoreColor = score.OverallScore >= 80 ? "bg-success" :
                            score.OverallScore >= 60 ? "bg-warning" : "bg-danger";
                            var latestHistory = claim.StatusHistory?.OrderByDescending(h => h.ChangeDate).FirstOrDefault();

                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="progress" style="width: 60px; height: 20px;">
                                            <div class="progress-bar @scoreColor" style="width: @score.OverallScore%">
                                                @score.OverallScore%
                                            </div>
                                        </div>
                                        @if (score.OverallScore >= 85)
                                        {
                                            <i class="fas fa-robot text-success ms-2" title="AI Recommended"></i>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <strong>@claim.User?.FullName</strong>
                                    <br>
                                    <small class="text-muted">Rate: R @claim.User?.HourlyRate.ToString("F2")/hr</small>
                                </td>
                                <td>@claim.HoursWorked</td>
                                <td>
                                    <strong>R @claim.TotalAmount.ToString("F2")</strong>
                                </td>
                                <td>@claim.SubmissionDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    @if (claim.SupportingDocuments.Any())
                                    {
                                        <span class="badge bg-success">@claim.SupportingDocuments.Count</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">None</span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @(latestHistory?.Notes ?? "No notes")
                                    </small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button onclick="updateClaimStatus(@claim.ClaimID, 3)"
                                                class="btn btn-success" title="Approve">
                                            <i class="fas fa-check"></i> Approve
                                        </button>
                                        <button onclick="updateClaimStatus(@claim.ClaimID, 4)"
                                                class="btn btn-danger" title="Reject">
                                            <i class="fas fa-times"></i> Reject
                                        </button>
                                        <a asp-action="Details" asp-route-id="@claim.ClaimID"
                                           class="btn btn-outline-primary" title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button onclick="showManagerAnalysis(@claim.ClaimID)"
                                                class="btn btn-outline-info" title="Analysis">
                                            <i class="fas fa-chart-bar"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No claims pending final approval.
    </div>
}

<!-- Batch Approve Modal -->
<div class="modal fade" id="batchApproveModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-check-double"></i> Batch Approve High-Confidence Claims
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Approve all claims with AI confidence score â‰¥ 80%?</p>
                <div class="alert alert-warning">
                    <strong>@claimsWithScores.Count(c => c.Score.OverallScore >= 80) claims</strong> will be automatically approved.
                    <br>
                    <strong>Total Amount: R @claimsWithScores.Where(c => c.Score.OverallScore >= 80).Sum(c => c.Claim.TotalAmount).ToString("F2")</strong>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" onclick="batchApproveHighConfidence()">
                    <i class="fas fa-bolt"></i> Approve High-Confidence Claims
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#managerClaimsTable').DataTable({
                pageLength: 25,
                order: [[0, 'desc']] // Sort by score descending
            });
        });

        function updateClaimStatus(claimId, statusId) {
            const action = statusId === 3 ? 'approve' : 'reject';

            if (confirm(`Are you sure you want to ${action} this claim?`)) {
                $.post('@Url.Action("UpdateStatus", "Claims")', {
                    claimId: claimId,
                    newStatusId: statusId
                }, function(data) {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                });
            }
        }

        function batchApproveHighConfidence() {
            if (confirm('Approve all high-confidence claims automatically?')) {
                $.post('@Url.Action("BatchApproveHighConfidence", "Claims")', function(data) {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                });
            }
        }

        function generateManagerReport() {
            $.post('@Url.Action("GenerateManagerReport", "Claims")', function(data) {
                if (data.success) {
                    // Download the report
                    window.location.href = data.downloadUrl;
                } else {
                    alert('Error generating report: ' + data.message);
                }
            });
        }

        function showManagerAnalysis(claimId) {
            // Enhanced analysis modal for managers
            $.get('@Url.Action("GetManagerAnalysis", "Claims")', { claimId: claimId }, function(data) {
                // Create or update analysis modal
                let analysisModal = $('#managerAnalysisModal');
                if (analysisModal.length === 0) {
                    $('body').append(`
                        <div class="modal fade" id="managerAnalysisModal" tabindex="-1">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Manager Analysis</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body" id="managerAnalysisContent"></div>
                                </div>
                            </div>
                        </div>
                    `);
                }
                $('#managerAnalysisContent').html(data);
                $('#managerAnalysisModal').modal('show');
            });
        }
    </script>
}
