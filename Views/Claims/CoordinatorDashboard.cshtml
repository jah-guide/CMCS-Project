@model List<ContractMonthlyClaimSystem.Services.ClaimWithScore>
@{
    ViewData["Title"] = "Coordinator Dashboard - Automated Claim Processing";
}

<h2>
    <i class="fas fa-robot"></i> Coordinator Dashboard - Automated Claim Processing
</h2>

<!-- Automation Controls -->
<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="card-title mb-0">
            <i class="fas fa-cogs"></i> Automation Controls
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <button class="btn btn-success w-100" onclick="runAutoScoring()">
                    <i class="fas fa-bolt"></i> Run Auto-Scoring
                </button>
            </div>
            <div class="col-md-4">
                <button class="btn btn-warning w-100" onclick="prioritizeClaims()">
                    <i class="fas fa-sort-amount-down"></i> Prioritize Claims
                </button>
            </div>
            <div class="col-md-4">
                <button class="btn btn-info w-100" data-bs-toggle="modal" data-bs-target="#batchApproveModal">
                    <i class="fas fa-layer-group"></i> Batch Approval
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h6 class="card-title">Pending Claims</h6>
                <h3>@Model.Count</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h6 class="card-title">High Priority</h6>
                <h3>@Model.Count(c => c.Score.Priority == "High")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <h6 class="card-title">Auto-Approve Ready</h6>
                <h3>@Model.Count(c => c.Score.Recommendation == "Auto-Approve")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h6 class="card-title">Avg Score</h6>
                <h3>@(Model.Any() ? Model.Average(c => c.Score.OverallScore).ToString("F0") : "0")%</h3>
            </div>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-tasks"></i> Prioritized Claims Queue
                <span class="badge bg-secondary">@Model.Count</span>
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="claimsTable">
                    <thead>
                        <tr>
                            <th>
                                <input type="checkbox" id="selectAllClaims" />
                            </th>
                            <th>Priority</th>
                            <th>Score</th>
                            <th>Claim ID</th>
                            <th>Lecturer</th>
                            <th>Hours</th>
                            <th>Amount</th>
                            <th>Documents</th>
                            <th>AI Recommendation</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var claim = item.Claim;
                            var score = item.Score;
                            var priorityBadge = score.Priority == "High" ? "bg-danger" :
                            score.Priority == "Medium" ? "bg-warning" : "bg-secondary";
                            var recommendationBadge = score.Recommendation switch
                            {
                                "Auto-Approve" => "bg-success",
                                "Approve" => "bg-info",
                                "Review" => "bg-warning",
                                "Detailed Review" => "bg-orange",
                                _ => "bg-danger"
                            };

                            <tr data-priority="@item.Priority" data-score="@score.OverallScore">
                                <td>
                                    <input type="checkbox" class="claim-checkbox" value="@claim.ClaimID"
                                           data-recommendation="@score.Recommendation" />
                                </td>
                                <td>
                                    <span class="badge @priorityBadge">
                                        <i class="fas fa-@(score.Priority == "High" ? "exclamation-triangle" : "clock")"></i>
                                        @score.Priority
                                    </span>
                                </td>
                                <td>
                                    <div class="progress" style="width: 80px; height: 20px;">
                                        <div class="progress-bar
                                                    @(score.OverallScore >= 80 ? "bg-success" :
                                                                                           score.OverallScore >= 60 ? "bg-warning" : "bg-danger")"
                                     style="width: @score.OverallScore%">
                                    @score.OverallScore%
                                </div>
                            </div>
                        </td>
                        <td>@claim.ClaimID</td>
                        <td>@claim.User?.FullName</td>
                        <td>@claim.HoursWorked</td>
                        <td>R @claim.TotalAmount.ToString("F2")</td>
                        <td>
                            @if (claim.SupportingDocuments.Any())
                                    {
                                        <span class="badge bg-success">@claim.SupportingDocuments.Count</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">None</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge @recommendationBadge">
                                        <i class="fas fa-@(score.Recommendation == "Auto-Approve" ? "robot" : "user")"></i>
                                        @score.Recommendation
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        @if (score.Recommendation == "Auto-Approve")
                                        {
                                            <button onclick="autoApproveClaim(@claim.ClaimID)"
                                                    class="btn btn-success" title="Auto-Approve">
                                                <i class="fas fa-bolt"></i>
                                            </button>
                                        }
                                        <button onclick="updateClaimStatus(@claim.ClaimID, 2)"
                                                class="btn btn-outline-success" title="Approve">
                                            <i class="fas fa-check"></i>
                                        </button>
                                        <button onclick="updateClaimStatus(@claim.ClaimID, 4)"
                                                class="btn btn-outline-danger" title="Reject">
                                            <i class="fas fa-times"></i>
                                        </button>
                                        <a asp-action="Details" asp-route-id="@claim.ClaimID"
                                           class="btn btn-outline-primary" title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button onclick="showClaimAnalysis(@claim.ClaimID)"
                                                class="btn btn-outline-info" title="AI Analysis">
                                            <i class="fas fa-brain"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No pending claims for approval.
    </div>
}

<!-- Batch Approval Modal -->
<div class="modal fade" id="batchApproveModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-layer-group"></i> Batch Claim Approval
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="batchSelectionSummary" class="alert alert-info">
                    No claims selected for batch processing.
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="enableAutoApprove">
                    <label class="form-check-label" for="enableAutoApprove">
                        Enable AI-powered auto-approval for high-confidence claims
                    </label>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="sendNotifications">
                    <label class="form-check-label" for="sendNotifications">
                        Send email notifications to lecturers
                    </label>
                </div>

                <div id="batchProcessingResults" style="display: none;">
                    <h6>Processing Results:</h6>
                    <div id="processingLog" class="border p-2 bg-light" style="max-height: 200px; overflow-y: auto;"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="processBatchApproval()" id="processBatchBtn" disabled>
                    <i class="fas fa-cogs"></i> Process Batch Approval
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Claim Analysis Modal -->
<div class="modal fade" id="claimAnalysisModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">AI Claim Analysis</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="analysisContent">
                <!-- Analysis content will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize DataTable with sorting by priority
        $(document).ready(function() {
            $('#claimsTable').DataTable({
                pageLength: 25,
                order: [[1, 'desc'], [2, 'desc']], // Sort by priority, then score
                columnDefs: [
                    { orderable: false, targets: [0, 9] } // Disable sorting for checkbox and actions
                ]
            });

            // Select all functionality
            $('#selectAllClaims').change(function() {
                $('.claim-checkbox').prop('checked', this.checked);
                updateBatchSelection();
            });

            $('.claim-checkbox').change(updateBatchSelection);
        });

        // Batch selection management
        function updateBatchSelection() {
            const selectedClaims = $('.claim-checkbox:checked');
            const claimIds = selectedClaims.map(function() {
                return $(this).val();
            }).get();

            const autoApproveCount = selectedClaims.filter(function() {
                return $(this).data('recommendation') === 'Auto-Approve';
            }).length;

            if (claimIds.length > 0) {
                $('#batchSelectionSummary').html(`
                    <strong>${claimIds.length} claims selected</strong><br>
                    <span class="text-success">${autoApproveCount} eligible for auto-approval</span>
                `);
                $('#processBatchBtn').prop('disabled', false);
            } else {
                $('#batchSelectionSummary').html('No claims selected for batch processing.');
                $('#processBatchBtn').prop('disabled', true);
            }
        }

        // Auto-approve single claim
        function autoApproveClaim(claimId) {
            if (confirm('Auto-approve this high-confidence claim?')) {
                $.post('@Url.Action("AutoApproveClaim", "Claims")', {
                    claimId: claimId
                }, function(data) {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                });
            }
        }

        // Batch approval processing
        function processBatchApproval() {
            const selectedClaims = $('.claim-checkbox:checked');
            const claimIds = selectedClaims.map(function() {
                return $(this).val();
            }).get();

            const enableAutoApprove = $('#enableAutoApprove').is(':checked');

            $('#processBatchBtn').prop('disabled', true).html(`
                <span class="spinner-border spinner-border-sm"></span> Processing...
            `);

            $.post('@Url.Action("ProcessBatchApproval", "Claims")', {
                claimIds: claimIds,
                enableAutoApprove: enableAutoApprove
            }, function(data) {
                $('#processingLog').empty();
                data.processingLog.forEach(log => {
                    $('#processingLog').append(`<div>${log}</div>`);
                });

                $('#batchProcessingResults').show();

                setTimeout(() => {
                    location.reload();
                }, 3000);
            });
        }

        // Show claim analysis
        function showClaimAnalysis(claimId) {
            $.get('@Url.Action("GetClaimAnalysis", "Claims")', { claimId: claimId }, function(data) {
                $('#analysisContent').html(data);
                $('#claimAnalysisModal').modal('show');
            });
        }

        // Automation functions
        function runAutoScoring() {
            $.post('@Url.Action("RunAutoScoring", "Claims")', function(data) {
                if (data.success) {
                    alert('Auto-scoring completed! Page will refresh.');
                    location.reload();
                }
            });
        }

        function prioritizeClaims() {
            // This would re-sort based on latest scores
            location.reload();
        }

        // Enhanced status update with analytics
        function updateClaimStatus(claimId, statusId) {
            const action = statusId === 2 ? 'approve' : 'reject';

            if (confirm(`Are you sure you want to ${action} this claim?`)) {
                $.post('@Url.Action("UpdateStatus", "Claims")', {
                    claimId: claimId,
                    newStatusId: statusId
                }, function(data) {
                    if (data.success) {
                        // Optional: Send to analytics
                        logApprovalAction(claimId, action, 'manual');
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                });
            }
        }

        function logApprovalAction(claimId, action, method) {
            // In a real app, this would send to analytics service
            console.log(`Claim ${claimId} ${action}ed via ${method}`);
        }
    </script>

    <style>
        .bg-orange {
            background-color: #ff9800 !important;
        }

        .progress {
            margin-bottom: 0;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.1);
        }
    </style>
}
